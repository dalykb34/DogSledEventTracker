                <Button x:Name="btn4Reset" Clicked="btn4Reset_Clicked" Text="Reset" TextColor="BlueViolet" Opacity=".4" WidthRequest="{Binding Path=Width, Source={x:Reference btn4Start}}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="Dog name" VerticalOptions="Center"/>
                <Label  x:Name="lblStopwatch5" FontSize="Medium" VerticalOptions="Start" 
                HorizontalOptions="Start" />
                <Button x:Name="btn5Start" Clicked="btn5Start_Clicked" Text="Start" TextColor="Green" Opacity=".4"/>
                <Button x:Name="btn5Stop" Clicked="btn5Stop_Clicked" Text="Stop" TextColor="Red" Opacity=".4" WidthRequest="{Binding Path=Width, Source={x:Reference btn5Start}}"/>
                <Button x:Name="btn5Reset" Clicked="btn5Reset_Clicked" Text="Reset" TextColor="BlueViolet" Opacity=".4" WidthRequest="{Binding Path=Width, Source={x:Reference btn5Start}}"/>
            </StackLayout>
            <Label Text="Photo by  Mats Speicher on Unsplash" Opacity=".5" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>